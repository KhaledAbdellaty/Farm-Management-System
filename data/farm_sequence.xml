<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Farm -->
        <record id="seq_farm_farm" model="ir.sequence">
            <field name="name">Farm</field>
            <field name="code">farm.farm</field>
            <field name="prefix">FARM</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Sequence for Field -->
        <record id="seq_farm_field" model="ir.sequence">
            <field name="name">Farm Field</field>
            <field name="code">farm.field</field>
            <field name="prefix">FIELD</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Sequence for Daily Farm Operation Report References -->
        <record id="seq_farm_daily_report" model="ir.sequence">
            <field name="name">Daily Farm Operation Report</field>
            <field name="code">farm.daily.report</field>
            <field name="prefix">DR/%(year)s/%(month)s/%(day)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">no_gap</field>
        </record>
        
        <!-- Sequence for Cultivation Projects -->
        <record id="seq_farm_cultivation_project" model="ir.sequence">
            <field name="name">Farm Cultivation Project</field>
            <field name="code">farm.cultivation.project</field>
            <field name="prefix">CP/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">no_gap</field>
        </record>
        
        <!-- Sequence for Crop Bill of Materials -->
        <record id="seq_farm_crop_bom" model="ir.sequence">
            <field name="name">Farm Crop BOM</field>
            <field name="code">farm.crop.bom</field>
            <field name="prefix">BOM/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">no_gap</field>
        </record>
        
        <!-- Sequence for Cost Analysis -->
        <record id="seq_farm_cost_analysis" model="ir.sequence">
            <field name="name">Farm Cost Analysis</field>
            <field name="code">farm.cost.analysis</field>
            <field name="prefix">COST/%(year)s/%(month)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="implementation">no_gap</field>
        </record>
    </data>
</odoo>
