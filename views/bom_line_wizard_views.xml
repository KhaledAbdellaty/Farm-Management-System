<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crop_bom_line_wizard_form" model="ir.ui.view">
        <field name="name">farm.crop.bom.line.wizard.form</field>
        <field name="model">farm.crop.bom.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Add BOM Line">
                <group>
                    <field name="input_type"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="apply_days"/>
                    <field name="notes"/>
                    <field name="bom_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_add" string="Add" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
