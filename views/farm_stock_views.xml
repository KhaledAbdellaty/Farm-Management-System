    <!-- Inherit Stock Move Line View -->
    <record id="farm_stock_move_line_view" model="ir.ui.view">
        <field name="name">stock.move.line.tree.farm</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="move_id" invisible="1"/>
                <field name="daily_report_id" string="Farm Operation" optional="show" invisible="context.get('daily_report_id', False) == False"/>
            </xpath>
        </field>
    </record>
