    <!-- Farm Inventory Action -->
    <record id="farm_action_product_stock" model="ir.actions.act_window">
        <field name="name">Farm Inventory</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="stock.product_product_stock_tree"/>
        <field name="search_view_id" ref="stock.product_search_form_view_stock_report"/>
        <field name="context">{
            'search_default_agricultural': 1,
            'search_default_farm_supplies': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No products found in your farm inventory.
            </p>
            <p>
                This view displays the current inventory quantities for all products used in your farm operations.
            </p>
        </field>
    </record>

    <!-- Stock Move History Action -->
    <record id="farm_action_move_line_history" model="ir.actions.act_window">
        <field name="name">Stock Move History</field>
        <field name="res_model">stock.move.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="stock.view_move_line_tree"/>
        <field name="search_view_id" ref="stock.stock_move_line_view_search"/>
        <field name="context">{
            'search_default_done': 1,
            'search_default_farm_operations': 1,
            'search_default_by_daily_report': 1,
            'pivot_measures': ['quantity_product_uom', '__count__']
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stock moves found for farm operations.
            </p>
            <p>
                This view shows the history of all inventory movements in your farm operations.
            </p>
        </field>
    </record>
