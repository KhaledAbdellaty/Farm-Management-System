<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Stock View -->
    <record id="farm_product_stock_tree_view" model="ir.ui.view">
        <field name="name">product.product.stock.list.farm</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_product_stock_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="default_code" optional="show" string="Internal Reference"/>
                <field name="categ_id" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='free_qty']" position="after">
                <field name="is_used_in_farm" string="Used in Farm" optional="show"/>
                <field name="last_farm_usage_date" string="Last Farm Usage" optional="show"/>
            </xpath>
        </field>
    </record>
    
