<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Crop Form View -->
    <record id="view_crop_form" model="ir.ui.view">
        <field name="name">farm.crop.form</field>
        <field name="model">farm.crop</field>
        <field name="arch" type="xml">
            <form string="Crop">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_projects" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="project_count" widget="statinfo" string="Projects"/>
                        </button>
                        <button name="action_view_boms" type="object" class="oe_stat_button" icon="fa-list-ul">
                            <field name="bom_count" widget="statinfo" string="BOMs"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Crop Name"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Crop Code"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="crop_type"/>
                            <field name="scientific_name"/>
                            <field name="family"/>
                            <field name="variety"/>
                        </group>
                        <group>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="growing_cycle" string="Growing Cycle (days)"/>
                            <field name="avg_yield" string="Average Yield (t/ha)"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Growing Conditions">
                            <group>
                                <group>
                                    <field name="climate_preference"/>
                                    <field name="water_req"/>
                                    <field name="planting_season"/>
                                </group>
                                <group>
                                    <label for="ph_min" string="Optimal pH Range"/>
                                    <div class="o_row">
                                        <field name="ph_min"/>
                                        <span class="mx-2">to</span>
                                        <field name="ph_max"/>
                                    </div>
                                    <label for="temp_min" string="Temperature Range (Â°C)"/>
                                    <div class="o_row">
                                        <field name="temp_min"/>
                                        <span class="mx-2">to</span>
                                        <field name="temp_max"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="BOMs">
                            <field name="bom_ids" context="{'default_crop_id': id}">
                                <list string="Crop BOMs">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="area"/>
                                    <field name="area_unit"/>
                                    <field name="is_default"/>
                                    <field name="total_cost"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Crop list View -->
    <record id="view_crop_list" model="ir.ui.view">
        <field name="name">farm.crop.list</field>
        <field name="model">farm.crop</field>
        <field name="arch" type="xml">
            <list string="Crops">
                <field name="name"/>
                <field name="code"/>
                <field name="crop_type"/>
                <field name="scientific_name"/>
                <field name="growing_cycle"/>
                <field name="avg_yield"/>
                <field name="project_count"/>
            </list>
        </field>
    </record>

    <!-- Crop Search View -->
    <record id="view_crop_search" model="ir.ui.view">
        <field name="name">farm.crop.search</field>
        <field name="model">farm.crop</field>
        <field name="arch" type="xml">
            <search string="Search Crops">
                <field name="name"/>
                <field name="code"/>
                <field name="crop_type"/>
                <field name="scientific_name"/>
                <field name="family"/>
                <field name="planting_season"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Crop Type" name="crop_type" context="{'group_by': 'crop_type'}"/>
                    <filter string="Family" name="family" context="{'group_by': 'family'}"/>
                    <filter string="Planting Season" name="planting_season" context="{'group_by': 'planting_season'}"/>
                    <filter string="Climate" name="climate" context="{'group_by': 'climate_preference'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Crop Kanban View -->
    <record id="view_crop_kanban" model="ir.ui.view">
        <field name="name">farm.crop.kanban</field>
        <field name="model">farm.crop</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="crop_type"/>
                <field name="growing_cycle"/>
                <field name="planting_season"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image" t-if="record.image.raw_value">
                                <img alt="Crop Image" t-att-src="kanban_image('farm.crop', 'image', record.id.raw_value)"/>
                            </div>
                            <div class="o_kanban_image" t-if="!record.image.raw_value">
                                <img alt="Crop Image" t-att-src="'/farm_management/static/src/img/crop_default.png'"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="crop_type"/>
                                </div>
                                <ul>
                                    <li t-if="record.planting_season.raw_value">
                                        Season: <field name="planting_season"/>
                                    </li>
                                    <li t-if="record.growing_cycle.raw_value">
                                        Cycle: <field name="growing_cycle"/> days
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Crop Action -->
    <record id="action_farm_crop" model="ir.actions.act_window">
        <field name="name">Crops</field>
        <field name="res_model">farm.crop</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first crop!
            </p>
            <p>
                Define crops with their growing conditions and requirements.
            </p>
        </field>
    </record>
</odoo>
